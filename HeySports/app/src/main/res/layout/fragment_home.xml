<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.example.android.heysports.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.exoplayer2.ui.StyledPlayerView
            android:id="@+id/pv_introduction"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            app:auto_show="true"
            app:clipCornerToRound="@{10}"
            app:controller_layout_id="@layout/layout_home_introduction_playback"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:resize_mode="fixed_height"
            app:show_buffering="when_playing"
            app:show_shuffle_button="true"
            app:surface_type="surface_view"
            app:use_controller="true" />

        <com.google.android.exoplayer2.ui.DefaultTimeBar
            android:id="@+id/tb_introduction"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/black_30"
            app:layout_constraintBottom_toBottomOf="@id/pv_introduction"
            app:layout_constraintEnd_toEndOf="@id/pv_introduction"
            app:layout_constraintStart_toStartOf="@id/pv_introduction"
            app:played_color="@color/teal_200"
            app:show_timeout="10000" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>